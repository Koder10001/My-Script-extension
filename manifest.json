{
    "name": "My Script",
    "version": "1.0",
    "description": "run my script everywhere",
    "permissions": ["activeTab","downloads"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "manifest_version": 2
}